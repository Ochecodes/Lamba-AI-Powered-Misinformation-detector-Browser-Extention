{
  "manifest_version": 3,
  "name": "Lamba: verify News on the Go",
  "description": "Analyze News content and detects misinformation in Realtime.",
  "version": "3.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://idir.uta.edu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Lamba-verify News in realtime"
  },
  "web_accessible_resources": [
  {
    "resources": ["icon.png"],
    "matches": ["<all_urls>"]
  }
]
}
